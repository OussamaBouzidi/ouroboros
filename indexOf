import java.sql.SQLOutput;

public class stringIndexOf {
    public static void main(String args[]) {

        String st1 = new String("What arg you doing Brad?");
        String st2 = new String("Who are you talking to Angie?");
        String st3 = new String("I like the suit you wore yesterday.");
        String st4 = new String("Hello World!");

        System.out.println("First try " + st1.indexOf("u"));
        //the char u is on the 11th position and not 12 because the index starts from 0
        //which means that W is on the index
        System.out.println(st1.indexOf("g", 8));
        //searches for the position of char g from the index 8 and the first char after index 8 is 17
        System.out.println(st4.indexOf("World"));
        //It searches for the String World and its first char will be display but not the value of it but
        //the index position
        System.out.println(st4.indexOf(101));
        //is there a char e = 101 in the String? Yes than 1, No than its -1
        System.out.println(st3.indexOf("H",3));
        //if Index is behind the fromindex or the char is not there than the output is -1

    }
}
